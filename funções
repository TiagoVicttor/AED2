#include <stdio.h>
#include <iostream>

int fat(int x){
    if(x ==1){
        return 1;
    }
    else{
        return x*fat(x-1);
    }
}

int fib(int x){
    if(x<=2){
        return 1;
    }
    else{
        return fib(x-1)+fib(x-2);
    }
}

void hanoi(int x,char ori,char trab,char dest){
    if(x == 1){
        printf("mover 1 de %c para %c\n",ori,dest);
    }else{
        hanoi(x-1,ori,dest,trab);
        std::cout <<"Mover " << x << " de " << " para " << dest << std::endl;
        //printf("Mover %d de %c para %c\n",x,ori,dest);
        hanoi(x-1,trab,ori,dest);
    }

}


