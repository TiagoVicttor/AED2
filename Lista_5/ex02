#include<stdio.h>
#include<limits.h>

int min(int a,int b) {return (a < b) ? a : b};
int max(int a,int b) {return (a > b) ? a : b};

int main(){
	int moedas[] = {1,3,4};
	int n = 3;
	int valor = 7;
	
	int dp[valor+1];
	
	for(int i = 0; i<=valor;i++){
		dp[i] = INT_MAX;
		dp[0] = 0;
	}
	
	for(int i = 1;i<=valor;i++){
		for(int j = 1;j<=n;j++){
			if(moedas[j] <= i && dp[i-moedas[j] != INT_MAX){
				dp[i] = min(dp[i], dp[i-moedas[j] + 1);
			}
		}
	}
	
	if(dp[valor] == INT_MAX){
		printf("Nao eh possivel obter %d gemas\n",valor);
	}else{
		printf("Menor numero de missoes: %d\n", dp[valor])
	}
	return 0;
}
